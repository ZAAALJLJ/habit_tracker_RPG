<!-- res/drawable/custom_progress_bar.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Progress Border -->
    <item>
        <shape>
            <corners android:radius="20dp" /> <!-- Adjust the radius as needed -->
            <solid android:color="#8B0A0915" /> <!-- Progress border color -->
            <stroke
                android:width="1.5dp"
                android:color="#0B0A17" />
        </shape>
    </item>

    <!-- Progress -->
    <item android:id="@android:id/progress" android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <clip>
            <shape>
                <corners android:radius="25dp" /> <!-- Adjust the radius as needed -->
                <solid android:color="#E9108CC5" /> <!-- Progress color -->
            </shape>
        </clip>
    </item>
</layer-list>
